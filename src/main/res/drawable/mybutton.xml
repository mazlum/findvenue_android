<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="4dip" android:color="#2e3138" />
            <gradient android:angle="-90" android:startColor="#F54343" android:endColor="#F54343"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="4dip" android:color="#2e3138" />
            <solid android:color="#58857e"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="6dip" android:color="#2e3138" />
            <gradient android:angle="-90" android:startColor="#F25050" android:endColor="#F25055" />
        </shape>
    </item>
</selector>